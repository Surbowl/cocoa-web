{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  //Smtp（发送Email邮件）的配置
  "Email": {
    //发件邮箱，通常Smtp账号与发件邮箱相同
    "From": "myemail@qq.com",
    //收件邮箱
    "To": "myemail@qq.com",
    //Smtp服务器url地址
    "SmtpHost": "smtp.qq.com",
    //Smtp服务器端口号
    //小提示：阿里云等服务商通常会禁用25端口，如需托管到云服务，建议使用其他端口
    "SmtpPort": 587,
    //Smtp账号，通常Smtp账号与发件邮箱相同
    "SmtpUser": "myemail@qq.com",
    //Smtp密码
    "SmtpPassword": "password",
    //Smtp是否启用SSL，请参照Smtp服务商的文档
    "EnableSsl": true
  }
  /*
  这里是本地（localhost）调试时使用的json配置文件
  而在实际运行时，使用的是 appsettings.json
  如果您在实际运行时发现无法发送Email，请检查您的 appsettings.json
  */
}